		<title>mui.ScrollView y-axis</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
		
		<link rel="stylesheet" href="../../mui/assets/reset.css" type="text/css" media="screen" title="no title" charset="utf-8">
		<link rel="stylesheet" href="../../scroll-view/assets/skins/default/scroll-view-skin.css" type="text/css" media="screen" title="no title" charset="utf-8">
		<style type="text/css" media="screen">
		#main { width: 100%; position: absolute; top: 20px; left: 0; bottom: 0px; right: 0; height: 100%; }
		#images {
			white-space: nowrap;
		}
		#images li {
			display: inline-block;
		}
		#controls {
            position: relative;
            top: 10px;
			left: 0;
            color: #000;
        }
		#otherContent{position:relative;top:20px;height:300px;color:#000;}
		</style>
		
		<script src="../../mui/js/mui.js" type="text/javascript" charset="utf-8"></script>
		<script src="../../scroll-view/js/ScrollView.js" type="text/javascript" charset="utf-8"></script>
		
		<script type="text/javascript" charset="utf-8">		
		mui.on(window, 'load', function() {
			document.body.style.minHeight = window.innerHeight+'px';
			document.body.style.overflow = 'hidden';
			
			var scrollView = new mui.ScrollView({
				element: '#the-element',
				size: '100%',
				axis: 'y',
				showsVerticalScrollIndicator: false,
				showsHorizontalScrollIndicator: false
			});
			
			var imageScrollView = new mui.ScrollView({
				element: '#images',
				axis: 'x',
				size: '100%',
				showsHorizontalScrollIndicator: false,
				pagingEnabled: true,
				paginator: {
					pageSelector: '.page'
				}
			});
			// Bind the next and prev UI elements to the pager
			mui.on('#next', 'click', mui.bind(imageScrollView.nextPage, imageScrollView));
			mui.on('#prev', 'click', mui.bind(imageScrollView.prevPage, imageScrollView));
		});
		</script>
	</head>
	
